<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.WMSApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary branding color -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/backgroundColor</item>
        <!-- Secondary branding color -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/backgroundColor</item>
        <!-- Background color -->
        <item name="android:windowBackground">@color/backgroundColor</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/primaryColor</item>
        <!-- Customize your theme here -->
        <item name="android:textColor">@color/textColor</item>
        <item name="hintTextColor">@color/hintColor</item>
        <item name="dividerColor">@color/dividerColor</item>
    </style>

    <style name="Theme.WMSApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
